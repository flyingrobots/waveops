{
  "name": "waveops",
  "version": "1.0.0",
  "description": "GPU-style waves for teams. Trade continuous meetings for discrete sync points and ship faster.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts tests/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "dev": "ts-node src/index.ts",
    "coordinate": "ts-node src/cli/coordinate.ts",
    "wave-status": "ts-node src/cli/wave-status.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings 0",
      "npm run test -- --passWithNoTests"
    ]
  },
  "dependencies": {
    "@octokit/graphql": "^7.0.2",
    "@octokit/rest": "^20.0.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "lint-staged": "^16.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "github",
    "coordination",
    "waves",
    "teams"
  ],
  "author": "WaveOps Team",
  "license": "MIT"
}
